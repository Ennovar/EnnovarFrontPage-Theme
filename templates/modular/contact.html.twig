<!-- Contact Section -->
<section id="contact">
    {#
        Page Variables:
        socials: A list of social media boxes to display between the Get In Touch and Contact Info section
                   Only the first 3 items will be used
        delays: A list of delays to iterate over when making the social media boxes
                   Delays control the time before an animation plays
        #}
    {% set socials = page.header.items %}
    {% set delays = ['0.1s', '0.3s', '0.5s'] %}

    <!-- Get In Touch Section -->
	<div class="container get-in-touch">
		<div class="row">
            <!-- Section Header -->
			<div class="col-md-12 col-sm-12">
				<div class="section-title">
					<h1 class="heading">{{page.header.title}}</h1>
				</div>
			</div>
            <!--/Section Header -->

            <!-- Contact Form -->
			<div class="col-md-offset-2 col-md-8 col-sm-12">
				<form action="contact.php" method="post" class="wow fadeInUp" data-wow-delay="0.6s">
					<div class="col-md-6 col-sm-6">
                        <label>Name</label>
						<input type="text" class="form-control" placeholder="" name="name" required>
					</div>
					<div class="col-md-6 col-sm-6">
                        <label>Email</label>
						<input type="email" class="form-control" placeholder="" name="email" required>
					</div>
					<div class="col-md-12 col-sm-12">
                        <label>Message</label>
						<textarea class="form-control" placeholder="" rows="7" name"message" required></textarea>
					</div>
					<div class="col-md-offset-4 col-md-8 col-sm-offset-4 col-sm-8">
						<input type="submit" class="form-control" value="SEND MESSAGE">
					</div>
				</form>
			</div>
            <!--/Contact Form -->
		</div>
    </div>
    <!--/Get In Touch Section -->

    <!-- Social Media and Contact Info Section -->
    <div class="container-fluid" id=footer>
        <div class="col-md-12 col-sm-12 contact-address">
            {% for social in socials[0:3] %}
                <a href="{{social.url}}">
                    <div class="big-logo {%if loop.index0 == 1%}big-logo-mid{%endif%} col-lg-3 {%if loop.index0 == 0%} col-lg-offset-1 {%endif%} col-sm-6 col-centered wow bounceIn" data-wow-delay="{{delays[loop.index0 % 3]}}" style="background-image: url('{{page.media[social.background].url}}');">
                        <img class="small-logo" src="{{page.media[social.logo].url}}"></img>
                    </div>
                </a>
            {% endfor %}
        </div>
        <h1 class="section-title">{{page.header.contact_title}}</h1>
        <h1>{{page.header.contact_email}}</h1><h1 class="push-right">{{page.header.contact_phone}}</h1>
        <h2>{{content}}</h2>
        <h3>{{page.header.copyright}}</h3>        
    </div>
    <!--/Social Media and Contact Info Section -->
</section>
<!--/Contact Section -->
