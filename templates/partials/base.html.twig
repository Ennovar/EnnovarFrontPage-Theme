{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
<head>

{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>
    {% include 'partials/metadata.html.twig' %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png', true) }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}
        {% do assets.addCss('theme://css/animate.min.css') %}
        {% do assets.addCss('theme://css/bootstrap.min.css') %}
        {% do assets.addCss('theme://css/et-line-font.css') %}
        {% do assets.addCss('theme://css/font-awesome.min.css') %}
        {% do assets.addCss('theme://css/nivo-lightbox.css') %}
        {% do assets.addCss('theme://css/nivo_themes/default/default.css') %}
        {% do assets.addCss('theme://css/owl.carousel.css') %}
        {% do assets.addCss('theme://css/owl.theme.css') %}
        {% do assets.addCss('theme://css/style.css') %}
        {% do assets.addCss('theme://css/custom.css') %}
        {#{% do assets.addCss('https://fonts.googleapis.com/css?family=Montserrat:100,400,700') %}#}
        {% do assets.addCss('theme://css/montserrat-font.css') %}
        {{ assets.css() }}
    {% endblock %}

    {% block javascripts %}
        {% do assets.addJs('theme://js/jquery.js', 110) %}
        {% do assets.addJs('theme://js/bootstrap.min.js', 109) %}
        {% do assets.addJs('theme://js/jquery.nav.js', 108) %}
        {% do assets.addJs('theme://js/owl.carousel.min.js', 107) %}
        {% do assets.addJs('theme://js/nivo-lightbox.min.js', 106) %}
        {% do assets.addJs('theme://js/wow.min.js', 105) %}
        {% do assets.addJs('theme://js/custom.js', 104) %}
        {% do assets.addJs('theme://js/smoothscroll.js', 103) %}
    {% endblock %}

{% endblock head%}
</head>
<body data-spy="scroll" data-target=".navbar-collapse" data-offset="50">
    <div id="sb-site">
        <!-- preloader section -->
        <div class="preloader">
            <div class="sk-spinner sk-spinner-circle">
               <div class="sk-circle1 sk-circle"></div>
               <div class="sk-circle2 sk-circle"></div>
               <div class="sk-circle3 sk-circle"></div>
               <div class="sk-circle4 sk-circle"></div>
               <div class="sk-circle5 sk-circle"></div>
               <div class="sk-circle6 sk-circle"></div>
               <div class="sk-circle7 sk-circle"></div>
               <div class="sk-circle8 sk-circle"></div>
               <div class="sk-circle9 sk-circle"></div>
               <div class="sk-circle10 sk-circle"></div>
               <div class="sk-circle11 sk-circle"></div>
               <div class="sk-circle12 sk-circle"></div>
            </div>
        </div>
        <!--/preloader section -->

        {% block showcase %}{% endblock %}

        {% block body %}
        <section id="body" class="{{ class }}">
            {% block content %}{% endblock %}
        </section>
        {% endblock %}
        {{ assets.js() }}

    </div>
</body>
</html>
